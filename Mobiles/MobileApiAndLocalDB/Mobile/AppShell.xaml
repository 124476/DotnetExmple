<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Mobile.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Mobile"
    Shell.FlyoutBehavior="Flyout"
    Title="Collection mobile">

    <Shell.FlyoutHeader>
        <StackLayout>
            <Label FontSize="Header">Меню</Label>
        </StackLayout>
    </Shell.FlyoutHeader>

    <ShellContent Title="Главная" ContentTemplate="{DataTemplate local:Pages.PageLogin}" Route="PageLogin" />
    <ShellContent Title="Магазин" ContentTemplate="{DataTemplate local:Pages.PageSell}" Route="PageSell" />

</Shell>
