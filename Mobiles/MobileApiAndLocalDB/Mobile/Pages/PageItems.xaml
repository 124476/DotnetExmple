<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mobile.Pages.PageItems"
             Title="Предметы"
             Appearing="ContentPage_Appearing">
    <ScrollView>
        <VerticalStackLayout>
            <CollectionView x:Name="CollectionItems">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Vertical" ItemSpacing="5"></LinearItemsLayout>
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border Background="#219EEE">
                            <StackLayout>
                                <Grid ColumnDefinitions="200,*">
                                    <Image Source="{Binding ImageSource}"></Image>
                                    <StackLayout Grid.Column="1" Margin="10">
                                        <Label Text="{Binding Name}"></Label>
                                        <Label Text="{Binding IsPublished, StringFormat='Опубникован: {0}'}"></Label>
                                        <StackLayout Orientation="Horizontal">
                                            <Label Text="{Binding Price, StringFormat=' {0} р.'}"></Label>
                                            <Label Text="{Binding Count, StringFormat=' {0} шт.'}"></Label>
                                        </StackLayout>
                                        <StackLayout Orientation="Horizontal">
                                            <Label Text="{Binding DateStart, StringFormat='{0:dd.MM.yyyy}'}" Margin="0,0,10,0"></Label>
                                            <Label Text="{Binding TimeStart, StringFormat='{0:hh:mm}'}"></Label>
                                        </StackLayout>
                                        <Label Text="{Binding Description}"></Label>
                                    </StackLayout>
                                </Grid>
                                <Button x:Name="BtnDownload" Clicked="BtnDownload_Clicked" Text="Скачать" BackgroundColor="{Binding ColorDownload}"></Button>
                                <Button x:Name="BtnEdit" Clicked="BtnEdit_Clicked"  Text="Редактировать"></Button>
                            </StackLayout>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
            <Button x:Name="BtnAdd" Clicked="BtnAdd_Clicked" Text="Добавить"></Button>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>