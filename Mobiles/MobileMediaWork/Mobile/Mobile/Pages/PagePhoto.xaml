<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mobile.Pages.PagePhoto"
             xmlns:cv="clr-namespace:Camera.MAUI;assembly=Camera.MAUI"
            xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             Title="Фото">
    <ScrollView>
        <VerticalStackLayout>
            <!-- Превью камеры -->
            <cv:CameraView x:Name="cameraView" HeightRequest="500"/>
            <!-- Панель управления -->
            <StackLayout Grid.Row="1" Orientation="Horizontal" HorizontalOptions="Center">
                <Button Text="Сделать фото" Clicked="TakePhotoButton_Clicked"/>
                <Button Text="Переключить камеру" Clicked="SwitchCameraButton_Clicked"/>
            </StackLayout>

            <!-- Форма для сохранения -->
            <Entry x:Name="NameUserData" Placeholder="Введите название"/>

            <!-- Предпросмотр фото -->
            <Image x:Name="photoImage" HeightRequest="300" WidthRequest="300"/>

            <Button Text="Сохранить" Clicked="SaveButton_Clicked"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>