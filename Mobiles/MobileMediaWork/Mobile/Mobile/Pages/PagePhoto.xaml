<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mobile.Pages.PagePhoto"
             xmlns:cv="clr-namespace:Camera.MAUI;assembly=Camera.MAUI"
            xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             Title="Фото">
    <ScrollView>
        <VerticalStackLayout>
            <cv:CameraView x:Name="cameraView" HeightRequest="500"/>
            
            <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
                <Button Text="Сделать фото" Clicked="TakePhotoButton_Clicked"/>
                <Button Text="Переключить камеру" Clicked="SwitchCameraButton_Clicked"/>
            </StackLayout>

            <Entry Text="{Binding Name}" Placeholder="Введите название"/>

            <Image Source="{Binding Data}" HeightRequest="300" WidthRequest="300"/>

            <Button Text="Сохранить" x:Name="BtnSave" Clicked="SaveButton_Clicked"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>