<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mobile.Pages.PageAudio"
             Title="Аудио">
    <ScrollView>
        <VerticalStackLayout>
            <StackLayout HorizontalOptions="Center">
                <Button x:Name="BtnStart" Clicked="BtnStart_Clicked" Text="Начать запись"></Button>
                <Button x:Name="BtnEnd" Clicked="BtnEnd_Clicked"  Text="Завершить запись"></Button>
                <Button x:Name="BtnListen" Clicked="BtnListen_Clicked"  Text="Прослушать запись"></Button>
            </StackLayout>

            <Entry Text="{Binding Name}" Placeholder="Введите название"/>

            <Button Text="Сохранить" x:Name="BtnSave" Clicked="BtnSave_Clicked"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>