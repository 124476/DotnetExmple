<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mobile.Pages.PageLogin"
             Title="Авторизация">
    <VerticalStackLayout>
        <Label>Логин</Label>
        <Entry x:Name="Login"></Entry>
        <Label>Пароль</Label>
        <Entry x:Name="Password" IsPassword="True"></Entry>
        <Button x:Name="BtnLogin" Clicked="BtnLogin_Clicked" Text="Войти"></Button>
    </VerticalStackLayout>
</ContentPage>