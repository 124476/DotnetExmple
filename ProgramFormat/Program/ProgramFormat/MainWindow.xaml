<Window x:Class="ProgramFormat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProgramFormat"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" MinHeight="450" MinWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <StackPanel VerticalAlignment="Center" Width="200" Margin="10">
            <Button x:Name="BtnUsers" Click="BtnUsers_Click" Margin="0,5" Style="{StaticResource BtnStyle}">Пользователи</Button>
            <Button x:Name="BtnItems" Click="BtnItems_Click" Margin="0,5" Style="{StaticResource BtnStyle}">Товары</Button>
            <Button x:Name="BtnExport" Click="BtnExport_Click" Margin="0,5" Style="{StaticResource BtnStyle}">Скачать</Button>
            <Button x:Name="BtnImport" Click="BtnImport_Click" Margin="0,5" Style="{StaticResource BtnStyle}">Загрузить</Button>
        </StackPanel>
        <Frame x:Name="MyFrame" Grid.Column="1" NavigationUIVisibility="Hidden"></Frame>
    </Grid>
</Window>
