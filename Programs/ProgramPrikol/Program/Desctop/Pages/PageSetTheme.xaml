      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Desctop.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageSetTheme">

    <Grid>
        <StackPanel Width="200" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Name="BtnLigth" Click="BtnLigth_Click">Белая тема</Button>
            <Button x:Name="BtnDark" Click="BtnDark_Click">Черная тема</Button>
        </StackPanel>
    </Grid>
</Page>
