<Page x:Class="Desctop.Pages.PagePalitra"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Desctop.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PagePalitra">

    <Grid>
        <StackPanel Width="200" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock>Цвет</TextBlock>
            <TextBlock Name="TextColor"></TextBlock>
            <TextBox Name="TextBoxColor" TextChanged="TextBoxColor_TextChanged">#000000</TextBox>
            <Button Name="BtnGetColor" Click="BtnGetColor_Click">Палитра</Button>
        </StackPanel>
    </Grid>
</Page>
