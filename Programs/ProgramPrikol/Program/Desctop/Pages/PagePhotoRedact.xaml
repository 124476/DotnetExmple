<Page x:Class="Desctop.Pages.PagePhotoRedact"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Desctop.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PagePhotoRedact">

    <Grid>
        <StackPanel Width="200" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Image Source="{Binding Photo}" Height="200">
                <Image.RenderTransform>
                    <RotateTransform Angle="{Binding Angle}" CenterX="100" CenterY="100"></RotateTransform>
                </Image.RenderTransform>
            </Image>

            <Grid >
                <Button Name="BtnBack" Width="100" HorizontalAlignment="Left" Content="&lt;" Click="BtnBack_Click"></Button>
                <Button Name="BtnUp" Width="100" HorizontalAlignment="Right" Content="&gt;" Click="BtnUp_Click"></Button>
            </Grid>
            
            <Button Name="BtnColor" Click="BtnColor_Click">Изменить цвет</Button>
            <Button x:Name="BtnUplode" Click="BtnUplode_Click">Загрузить</Button>
        </StackPanel>
    </Grid>
</Page>
