<Page x:Class="Desctop.Pages.PageVideo"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Desctop.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageVideo">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>
        <MediaElement Name="VideoPlayer" LoadedBehavior="Manual"></MediaElement>
        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <Button x:Name="BtnUplode" Margin="10" Width="100" Click="BtnUplode_Click">Загрузить</Button>
            <Button x:Name="BtnStart" Margin="10" Width="100" Click="BtnStart_Click">Запустить</Button>
            <Button x:Name="BtnPouse" Margin="10" Width="100" Click="BtnPouse_Click">Паузка</Button>
            <Button x:Name="BtnStop" Margin="10" Width="100" Click="BtnStop_Click">Стоп</Button>
        </StackPanel>
    </Grid>
</Page>
