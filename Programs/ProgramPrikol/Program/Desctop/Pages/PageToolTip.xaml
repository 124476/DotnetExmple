<Page x:Class="Desctop.Pages.PageToolTip"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Desctop.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageToolTip">

    <Grid>
        <Grid Width="200" Height="50" VerticalAlignment="Center" HorizontalAlignment="Center" Background="Gray">
            <Grid.ToolTip>
                <StackPanel>
                    <TextBlock>Это текст при наводке!!</TextBlock>
                    <TextBlock>Круто же</TextBlock>
                </StackPanel>
            </Grid.ToolTip>
            <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center">Наведи на меня</TextBlock>
        </Grid>
    </Grid>
</Page>
