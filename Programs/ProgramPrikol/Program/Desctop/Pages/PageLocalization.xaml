<Page x:Class="Desctop.Pages.PageLocalization"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Desctop.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageLocalization">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="{DynamicResource LanguageChange}"></TextBlock>
            <TextBlock FontSize="15" Text="{DynamicResource TheText}"></TextBlock>
            <Button x:Name="BtnSetLang" Click="BtnSetLang_Click" Content="{DynamicResource ChangeLanguage}"></Button>
        </StackPanel>
    </Grid>
</Page>
