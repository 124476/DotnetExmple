<Page x:Class="ProgramFormat.Pages.PageItems"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProgramFormat.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageItems">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition Width="auto"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <DataGrid x:Name="DataItems">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Название" Binding="{Binding Name}"></DataGridTextColumn>
                <DataGridTextColumn Header="Пользователь" Binding="{Binding User.Name}"></DataGridTextColumn>
                <DataGridTemplateColumn>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button x:Name="BtnEdit" Content="Edit" Width="150" Click="BtnEdit_Click"></Button>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button x:Name="BtnDelete" Content="Delete" Width="150" Background="Red" Click="BtnDelete_Click"></Button>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Grid.Column="1" Width="200" VerticalAlignment="Center" Margin="10">
            <TextBlock Text="Name" Margin="0,5"></TextBlock>
            <TextBox Text="{Binding Name}" Margin="0,5"></TextBox>
            <TextBlock Text="User" Margin="0,5"></TextBlock>
            <ComboBox Name="ComboUsers" SelectedItem="{Binding User}" Margin="0,5" DisplayMemberPath="Name"></ComboBox>
            <Button x:Name="BtnSave" Content="Save" Margin="0,5" Click="BtnSave_Click"></Button>
        </StackPanel>
    </Grid>
</Page>
