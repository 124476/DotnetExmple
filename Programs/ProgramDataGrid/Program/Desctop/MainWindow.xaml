<Window x:Class="Desctop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Desctop"
        mc:Ignorable="d"
        Title="DataGrid" Height="450" Width="800"
         MinHeight="450" MinWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Menu>
            <MenuItem Header="Войти" Name="BtnOpen" Click="BtnOpen_Click"></MenuItem>
            <MenuItem Header="Админ панель" Name="Admin" Visibility="Collapsed">
                <MenuItem Header="Роли" Name="BtnRoles" Click="BtnRoles_Click"></MenuItem>
                <MenuItem Header="Пользователи" Name="BtnUsers" Click="BtnUsers_Click"></MenuItem>
                <MenuItem Header="Предметы" Name="BtnItems" Click="BtnItems_Click"></MenuItem>
            </MenuItem>
            <MenuItem Header="Магазин" Name="BtnSell" Click="BtnSell_Click"></MenuItem>
        </Menu>
        <Frame Name="MyFrame" Grid.Row="1" NavigationUIVisibility="Hidden" ContentRendered="MyFrame_ContentRendered"></Frame>
    </Grid>
</Window>
