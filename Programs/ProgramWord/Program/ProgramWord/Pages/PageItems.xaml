<Page x:Class="ProgramWord.Pages.PageItems"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProgramWord.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageItems">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition Width="auto"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <DataGrid x:Name="ListData" AutoGenerateColumns="False" IsReadOnly="True" FontSize="17">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Название" Binding="{Binding Name}"></DataGridTextColumn>
                <DataGridTextColumn Header="Пользователь" Binding="{Binding User.Name}"></DataGridTextColumn>
                <DataGridTemplateColumn>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button x:Name="BtnUpdate" Content="Редактировать" Background="White" Foreground="Black" Width="150" Click="BtnUpdate_Click"></Button>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button x:Name="BtnDelete" Content="Удалить" Background="Red" Foreground="White" Width="150" Click="BtnDelete_Click"></Button>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="10" Width="200">
            <TextBlock Text="Название" FontSize="17" Margin="0,5"></TextBlock>
            <TextBox Text="{Binding Name}" FontSize="17" Margin="0,5"></TextBox>
            <TextBlock Text="Пользователь" FontSize="17" Margin="0,5"></TextBlock>
            <ComboBox Name="ComboUsers" FontSize="17" SelectedItem="{Binding User}" DisplayMemberPath="Name"></ComboBox>
            <Button x:Name="BtnSave" Content="Сохранить" Margin="0,5" Width="200" Click="BtnSave_Click"></Button>
        </StackPanel>
    </Grid>
</Page>
