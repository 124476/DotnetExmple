<Window x:Class="Program.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Program"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <StackPanel Width="200" Margin="10" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBox x:Name="EmailTextBox"></TextBox>
            <Button Name="BtnEmailTest" Content="Test email" Click="BtnEmailTest_Click"></Button>
        </StackPanel>
        
        <StackPanel Width="200" Margin="10" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="1">
            <TextBlock Text="Ввод текста" Margin="0,10,0,0"></TextBlock>
            <TextBox x:Name="NumbersOnlyTextBox" PreviewTextInput="NumbersOnlyTextBox_PreviewTextInput"></TextBox>
        </StackPanel>
    
        <StackPanel Width="200" Margin="10" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="2">
            <TextBox x:Name="InputTextBox" Margin="0,10,0,0"></TextBox>
            <Button x:Name="ReplaceSpacesButton" Content="Заменить пробелы" Click="ReplaceSpacesButton_Click"></Button>
            <TextBlock x:Name="OutputTextBlock" Text="Результат замены"></TextBlock>
        </StackPanel>
    </Grid>
</Window>
