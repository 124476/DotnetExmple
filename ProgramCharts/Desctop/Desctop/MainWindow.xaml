<Window x:Class="Desctop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Desctop"
        mc:Ignorable="d"
        Title="Charts" Height="450" Width="800"
        MinHeight="450" MinWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <StackPanel VerticalAlignment="Center" Width="200">
            <Button Name="BtnCartesian" Click="BtnCartesian_Click" Margin="10">Линейная</Button>
            <Button Name="BtnTab" Click="BtnTab_Click" Margin="10">Столбчатая</Button>
            <Button Name="BtnPie" Click="BtnPie_Click" Margin="10">Круглая</Button>
        </StackPanel>
        <Frame Name="MyFrame" Grid.Column="1" NavigationUIVisibility="Hidden"></Frame>
    </Grid>
</Window>
