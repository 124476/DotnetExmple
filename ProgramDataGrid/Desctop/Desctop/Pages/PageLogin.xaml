<Page x:Class="Desctop.Pages.PageLogin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Desctop.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageLogin">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="200">
            <TextBlock>Логин</TextBlock>
            <TextBox Name="Login"></TextBox>
            <TextBlock>Пароль</TextBlock>
            <TextBox Name="Password"></TextBox>
            <Button Name="BtnOpen" Click="BtnOpen_Click">Войти</Button>
        </StackPanel>
    </Grid>
</Page>
