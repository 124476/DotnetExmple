<Window x:Class="ProgramQrCode.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProgramQrCode"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" MinHeight="450" MinWidth="800">
    <Grid>
        <StackPanel Width="200" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Image x:Name="QrI" Height="200" Source="{Binding Data}"></Image>
            <TextBox x:Name="QrText"></TextBox>
            <Button x:Name="GotImage" Content="Засшифровать" Click="GotImage_Click"></Button>
            <Button x:Name="SetImage" Content="Расшифровать" Click="SetImage_Click"></Button>
            <Button x:Name="SaveImage" Content="Скачать" Click="SaveImage_Click"></Button>
        </StackPanel>
    </Grid>
</Window>
