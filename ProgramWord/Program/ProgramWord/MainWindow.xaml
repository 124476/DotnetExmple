<Window x:Class="ProgramWord.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProgramWord"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" MinHeight="450" MinWidth="800">
    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <StackPanel VerticalAlignment="Center" Margin="10">
                <Button x:Name="BtnUsers" Margin="10" Click="BtnUsers_Click">Пользователи</Button>
                <Button x:Name="BtnItems" Margin="10" Click="BtnItems_Click">Товары</Button>
                <Button x:Name="BtnExport" Margin="10" Click="BtnExport_Click">Скачать в Word</Button>
                <Button x:Name="BtnImport" Margin="10" Click="BtnImport_Click">Выгрузить из Word</Button>
            </StackPanel>
            <Frame x:Name="MyFrame" NavigationUIVisibility="Hidden" Grid.Column="1" Margin="10"></Frame>
        </Grid>
    </Grid>
</Window>
